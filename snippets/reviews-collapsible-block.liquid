<div class="panel-group accordion-event" data-active-icon="feather-minus" data-inactive-icon="feather-plus">
  <div class="panel">
    <div class="panel-heading">
      <a class="accordion-toggle"{% if section_settings.collapsible_design == 'accordion' %} data-bs-toggle="collapse" href="#accordion-style-{{ section_id }}-{{ forloop_index }}" {% endif %} data-bs-parent="#accordion-{{ section_id }}"  aria-label="accordion">
        <div class="panel-title">
          <span class="d-inline-block">{{ block_settings.tab_heading | default: 'Reviews collapsible title' }}</span>
          {%- if section_settings.collapsible_design == 'accordion' -%}
            <i class="feather-plus"></i>
          {%- endif -%}
        </div>
      </a>
    </div>
    <div id="accordion-style-{{ section_id }}-{{ forloop_index }}" class="panel-collapse collapse {% if block_settings.open_default == true or section_settings.collapsible_design == 'list' %}show{% endif %}" data-bs-parent="#accordion-{{ section_id }}">
      <div class="panel-body product-reviews-collapsible">
        {%- if settings.product_review_app == 'loox_reviews' -%}
           <div id="looxReviews" data-product-id="{{ product.id }}" class="loox-reviews-default">{{ product.metafields.loox.reviews }}</div>
        {%- elsif settings. product_review_app == 'judgeMe_reviews' -%}
          <div style='clear:both'></div>
          <div id='judgeme_product_reviews' class='jdgm-widget jdgm-review-widget' data-id='{{ product.id }}'>
          {{ product.metafields.judgeme.widget }}
          </div>  
        {%- elsif settings.product_review_app == 'ali_reviews' -%}
          <div class="alireviews-review-box"></div>
        {%- elsif settings.product_review_app == 'yotpo_reviews' -%}
          <div class="yotpo yotpo-main-widget" data-product-id="{{ product.id }}" data-name="{{ product.title | escape }}" data-url="{{ shop.url }}{{ product.url }}" data-image-url="{{ product.featured_image | product_img_url: 'large' |replace: '?', '%3F' | replace: '&','%26'}}" data-price="{{ variant.price | money_without_currency }}" data-currency="{{ shop.currency }}" data-description="{{ product.description | escape }}"></div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

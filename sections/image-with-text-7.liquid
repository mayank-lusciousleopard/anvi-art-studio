<section
  id="{{ section.settings.section_id }}"
  class="section-bg section-{{ section.id }} image-with-text-7{% if section.settings.section_show == false %} d-none{% endif %}{{ section.settings.section_class_name }} {{ section.settings.padding_top }} {{ section.settings.padding_bottom }} d-md-block"
  style="--section_bg: {% if section.settings.section_gradient != blank %}{{ section.settings.section_gradient }}{% else %}{{ section.settings.section_bg_color }}{% endif %}"
>
	<div class="{{ section.settings.container_type }}">
		<div class="row">
			<div class="col-lg-7 h-100">
					{%- render 'responsive-image', image: section.settings.image, placeholder_type: 'lifestyle-image' -%}
			</div>
			<div class="col-lg-5 image-content d-flex flex-column">
        {%- if section.settings.logo_text_image != blank or section.settings.sub_heading != blank or section.settings.heading != blank or section.settings.description != blank  -%}
          <div class="d-flex flex-column align-items-{{ section.settings.heading_alignment }} text-{{ section.settings.heading_alignment }}">
            	{%- if section.settings.logo_text_image != blank -%}
            		<img src="{{ section.settings.logo_text_image | image_url }}" class="text-logo" alt="" width="{{ section.settings.logo_text_image.width }}" height="{{ section.settings.logo_text_image.height }}" loading="lazy" />
            	{%- endif -%}
            	{%- if section.settings.sub_heading != blank -%}
                <div class="section-sub-heading">{{ section.settings.sub_heading }}</div>
              {%- endif -%}
              {%- if section.settings.heading != blank -%}
                <h3 class="section-heading alt-font">{{ section.settings.heading }}</h3>
              {%- endif -%}
              {%- if section.settings.description != blank -%}
                <div class="section-description">{{ section.settings.description }}</div>
              {%- endif -%}
          </div>
        {%- endif -%}
        <div class="poster-image d-flex flex-column justify-content-center align-items-center position-relative">
        	{%- render 'responsive-image', image: section.settings.post_image, placeholder_type: 'simple-image' -%}
        	{%- if section.settings.rounded_image != blank -%}
            <img src="{{ section.settings.rounded_image | image_url }}" class="rounded" alt="" width="{{ section.settings.rounded_image.width }}" height="{{ section.settings.rounded_image.height }}" loading="lazy">
          {%- endif -%}
        </div>
			</div>
		</div>	
	</div>	
</section>
<style>
  {%- unless section.settings.use_default_section_typography == true -%}
    .section-{{ section.id }} .section-heading {
      font-size: {{ section.settings.section_heading_size }}px;
      line-height: {{ section.settings.heading_line_height }}px;
    }
    .section-{{ section.id }} .section-sub-heading {
      font-size: {{ section.settings.sub_heading_size }}px;
      letter-spacing: {{ section.settings.subheading_letter_spacing }}px;
      line-height: {{ section.settings.sub_heading_line_height }}px;
    }
  {%- endunless -%}
  {%- if section.settings.section_heading_color != blank -%}
    .section-{{ section.id }} .section-heading {
      color: {{ section.settings.section_heading_color }};
    }
  {%- endif -%}
  {%- if section.settings.section_sub_heading_color != blank -%}
    .section-{{ section.id }} .section-sub-heading {
      color: {{ section.settings.section_sub_heading_color }};
    }
  {%- endif -%}
  {%- if section.settings.section_description_color != blank -%}
    .section-{{ section.id }} .section-description {
      color: {{ section.settings.section_description_color }};
    }
  {%- endif -%}
</style>
